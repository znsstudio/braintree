<!DOCTYPE html>
<html>

<head>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>

    <div class="container">

        <div class="row">

            <div class="col-md-4 offset-md-4">

                <% if (typeof customer !== 'undefined') { %>

                <h4 class="mt-3 mb-3">Subscription Creation for <%= customer.firstName %></h4>

                <% } else { %>

                    <h4 class="mt-3 mb-3">Subscription Creation </h4>


                <% } %>    

                <form action="/braintree/subscription" method="post">

                    <div class="form-group">
                        <label for="planId">planId</label>
                        <input type="planId" class="form-control mt-3 mb-3" id="planId" placeholder="Enter planId"
                            name="planId">
                    </div>

                    <% if (typeof payment !== 'undefined') { %>

                    <div class="form-group">
                        <label for="paymentMethodToken">paymentMethodToken</label>
                        <input type="paymentMethodToken" class="form-control mt-3 mb-3" id="paymentMethodToken"
                            placeholder="Enter paymentMethodToken" name="paymentMethodToken" value="<%= payment.token %>">
                    </div>

                    <% } else { %>

                        <div class="form-group">
                            <label for="paymentMethodToken">paymentMethodToken</label>
                            <input type="paymentMethodToken" class="form-control mt-3 mb-3" id="paymentMethodToken"
                                placeholder="Enter paymentMethodToken" name="paymentMethodToken">
                        </div>

                    <% } %>

                    <div class="form-group">
                        <label for="firstBillingDate">firstBillingDate</label>
                        <input type="firstBillingDate" class="form-control mt-3 mb-3" id="firstBillingDate"
                            placeholder="Enter firstBillingDate" name="firstBillingDate">
                    </div>

                    <div class="form-group">
                        <label for="billingDayOfMonth">billingDayOfMonth</label>
                        <input type="billingDayOfMonth" class="form-control mt-3 mb-3" id="billingDayOfMonth"
                            placeholder="Enter billingDayOfMonth" name="billingDayOfMonth">
                    </div>

                    <div class="form-group">
                        <label for="numberOfBillingCycles">numberOfBillingCycles</label>
                        <input type="numberOfBillingCycles" class="form-control mt-3 mb-3" id="numberOfBillingCycles"
                            placeholder="Enter numberOfBillingCycles" name="numberOfBillingCycles">
                    </div>

                    <div class="form-group">
                        <label for="price">price</label>
                        <input type="price" class="form-control mt-3 mb-3" id="price"
                            placeholder="Enter price" name="price">
                    </div>

                    <div class="form-group">
                        <label for="trialDuration">trialDuration</label>
                        <input type="trialDuration" class="form-control mt-3 mb-3" id="trialDuration"
                            placeholder="Enter trialDuration" name="trialDuration">
                    </div>

                    <div class="form-group">
                        <label for="trialDurationUnit">trialDurationUnit</label>
                        <input type="trialDurationUnit" class="form-control mt-3 mb-3" id="trialDurationUnit"
                            placeholder="Enter trialDurationUnit" name="trialDurationUnit">
                    </div>

                    <div class="form-group">
                        <label for="trialPeriod">trialPeriod</label>
                        <input type="trialPeriod" class="form-control mt-3 mb-3" id="trialPeriod"
                            placeholder="Enter trialPeriod" name="trialPeriod">
                    </div>

                    <button type="submit" class="btn btn-primary mt-3 mb-3">Submit</button>

                </form>

            </div>

        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous">
    </script>

</body>

</html>